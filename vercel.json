{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "backend/app.py": {
      "excludeFiles": "{_dep_size/**,.next/**,node_modules/**}"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/app.py"
    }
  ]
}